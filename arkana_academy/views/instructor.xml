<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- odata -->
    <data>
        <!-- res.partner search view -->
        <record id="pengajar_view_search" model="ir.ui.view">
            <field name="name">res.partner.view.search</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="email"/>

                    <filter name="filter_pengajar" string="Pengajar" domain="[('is_instructor', '=', True)]"/>
                </search>
            </field>
        </record>
        <!-- oact -->
        <!-- res.partner action window -->
        <record id="res_partner_instructor_action" model="ir.actions.act_window">
            <field name="name">Pengajar</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="pengajar_view_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                </p>
            </field>
            <field name="context">{
                'default_is_instructor': True,
                'search_default_filter_pengajar': 1,
            }</field>
            <field name="domain">[('is_instructor', '=', True)]</field>
        </record>



        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="instructor_menu_act" name="Pengajar" parent="arkana_master_data_menu_categ" 
            action="res_partner_instructor_action" sequence="30"/>
        
    </data>
</odoo>