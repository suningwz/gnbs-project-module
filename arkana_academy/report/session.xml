<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <report
            id="report_session"
            model="arkana.session"
            string="Session Report"
            name="arkana_academy.report_session_view"
            file="arkana_academy.report_session_view"
            report_type="qweb-html" />

        <template id="report_session_view">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h1 class="text-center" t-esc="doc.name"/>

                            <table class="table table-borderless">
                                <tr>
                                    <td>Kursus</td>
                                    <td><span t-field="doc.course_id"/></td>
                                    <td>Tanggal</td>
                                    <td><span t-field="doc.session_date"/></td>
                                </tr>
                                <tr>
                                    <td>Pengajar</td>
                                    <td><span t-field="doc.instructor_id"/></td>
                                    <td>Minimal</td>
                                    <td><span t-field="doc.min_attendee"/></td>
                                </tr>
                            </table>

                            <table class="table table-bordered table-stripped">
                                <tr>
                                    <th>No</th>
                                    <th>Nomor Pendaftaran</th>
                                    <th>Nama Siswa</th>
                                </tr>
                                <t t-set="no" t-value="1"/>
                                <tr t-foreach="doc.attendee_ids" t-as="att">
                                    <td>
                                        <span t-esc="no"/>
                                    </td>
                                    <td>
                                        <span t-field="att.name"/>
                                    </td>
                                    <td>
                                        <span t-field="att.student_id"/>
                                    </td>
                                    <t t-set="no" t-value="no + 1"/>
                                </tr>
                            </table>

                            <hr/>
                            <p>TTD</p>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>