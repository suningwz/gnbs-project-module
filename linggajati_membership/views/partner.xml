<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="menu_partner_form" model="website.menu">
            <field name="name">Create Customer</field>
            <field name="url">/customer/form</field>
            <field name="parent_id" ref="website.main_menu"></field>
            <field name="sequence" type="int">22</field>
        </record>

        <!-- Membuat Form pada website  -->
        <template id="tmp_customer_form" name="Partner Form">    
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="oe_structure">
                        <div class="container">
                            <div class="col-md-12">
                                <form action="/customer/form/submit" method="POST" role="form">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <div class="form-group">
                                        <label for="patient_name" class="control-label"></label>
                                        <input type="text" class="form-control" t-att-value="name" name="name" id="name" required="1"/>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label" for="email">Your Email</label>
                                        <input type="email" class="form-control" t-att-value="email"  name="email" id="email" required="1"/>
                                    </div>
                                    <div class="clearfix oe_login_buttons">
                                        <button class="btn btn-primary pull-left" type="submit">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- Thanks Page -->
        <template id="tmp_customer_form_success" name="Customer Form Successfully Submitted">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="container">
                        <div class="col-md-12">
                            <div class="alert alert-success">
                                Customer created successfully.
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
        
    </data>
</odoo>