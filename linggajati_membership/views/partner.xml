<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="menu_partner_form" model="website.menu">
            <field name="name">Create Customer</field>
            <field name="url">/customer/form</field>
            <field name="parent_id" ref="website.main_menu"></field>
            <field name="sequence" type="int">22</field>
        </record>

        <!-- Membuat Form pada website  -->
        <template id="tmp_customer_form" name="Partner Form">    
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="oe_structure">
                        <div class="container">
                            <div class="col-md-12">
                                <form action="/customer/form/submit" method="POST" role="form" enctype="multipart/form-data">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <div class="form-group">
                                        <label for="patient_name" class="control-label">Nama</label>
                                        <input type="text" class="form-control" t-att-value="name" name="name" id="name" required="0"/>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label" for="email">Your Email</label>
                                        <input type="email" class="form-control" t-att-value="email"  name="email" id="email" required="0"/>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label" for="note">Note</label>
                                        <input type="text" class="form-control" t-att-value="note"  name="note" id="note"/>
                                    </div>
                                    <div class="form-group">
                                        <label for="photo" class="form-label">
                                            Upload Pas Foto
                                            <!-- <span class="text-danger"> *</span> -->
                                        </label>
                                        <input type="file" name="photo" class="form-control" accept="image/*"/>
                                        <!-- <input 
                                            type="file" 
                                            class="form-control" 
                                            name="photo" 
                                            id="photo" 
                                            accept="image/*,application/pdf,video/*" 
                                            multiple="true" 
                                            required="0"
                                            data-show-upload="true" 
                                            data-show-caption="true" 
                                            data-show-preview="true"
                                            filename="filename"
                                        /> -->
                                    </div>
                                    <div class="clearfix oe_login_buttons">
                                        <button class="btn btn-primary pull-left" type="submit">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- Thanks Page -->
        <template id="tmp_customer_form_success" name="Customer Form Successfully Submitted">
            <t t-call="website.layout">
                <t t-set="additional_title" t-value="'Upload Message'" />
                <div id="wrap">
                    <div class="container">
                        <div class="col-md-12">
                            <h1>
                                <div class="alert alert-success">
                                    Customer created successfully.
                                    <!-- <span t-esc="message" /> -->
                                </div>
                            </h1>
                            <a href="/customer/form" class="btn btn-primary">Back</a> 
                        </div>
                    </div>
                </div>
            </t>
        </template>
        
    </data>
</odoo>