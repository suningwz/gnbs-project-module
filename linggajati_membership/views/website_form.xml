<?xml version='1.0' encoding='utf-8'?>
<odoo>
   <record id="menu_patient_form12" model="website.menu">
       <field name="name">Create Patient</field>
       <field name="url">patient_webform</field>
       <field name="parent_id">website.main_menu</field>
       <field name="sequence">55</field>
   </record>

    <template id="create_patient" name="Create Patient">    
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container">
                        <form action="/reate/webpatient" method="POST" role="form">
                            <input type="hidden" name="csrf_token" t-att-value="requestn.csrf.token()"/>
                            <div class="form-group">
                                <label for="patient_name" class="control-label"></label>
                                <input type="text" class="form-control" t-att-value="patient_name" id="patient_name" placeholder="e.g. Abu Abdirohman" required="1"/>
                            </div>
                            <div class="form-group">
                                <lavel class="control-label" for="email">Your Email</lavel>
                                <input type="email" class="form-control" t-att-value="email_id" id="email_id" required="1"/>
                            </div>
                            <div class="clearfix oe_login_buttons">
                                <button class="btn btn-primary pull-left" type="submit">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>

    
    <record id="patient_thanks" model="website.page">
        <field name="name">Thanks</field>
        <field name="type">qweb</field>
        <field name="url">/patient-thank-you</field>
        <field name="website_published">True</field>
        <field name="key">om_hospital.patient_thanks</field>
        <field name="arch" type="xml">
            
            <t name="Thanks" t-name="om_hospital.patient.thanks">
                
                <t t-call="website.layout">
                    <div id="wrap">
                        <div class="container">
                            <h1>Thanks!</h1>
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="aler alert-success" role="status">
                                        Your message has been sent sucessfully.
                                    </div>
                                    <p>
                                        We willget back to you shortly
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
                
            </t>
            
        </field>
    </record>
    

</odoo>