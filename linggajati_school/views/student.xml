<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Modify Action Window -->
        
        <record id="school.action_student_student_form_2" model="ir.actions.act_window">
            <field name="name">Student Register</field>
        </record>

        <!-- Modify Form View -->
    
        <!-- student.student inherit form view -->
        <record id="view_student_student_form_2_custom" model="ir.ui.view">
            <field name="name">student.student.inherit.view.form</field>
            <field name="model">student.student</field>
            <field name="inherit_id" ref="school.view_student_student_form_2"/>
            <field name="arch" type="xml">
                <!-- Rename input placeholder -->
                <field name="school_id" position="attributes">
                    <attribute name="placeholder">School Level</attribute>
                </field>
                <field name="standard_id" position="attributes">
                    <attribute name="placeholder">Level</attribute>
                </field>
                <field name="date_of_birth" position="attributes">
                    <attribute name="placeholder">Date of Birth</attribute>
                </field>

                <xpath expr="//div[@class='o_address_format']" position="after">
                    <field name="school_id"/>
                    <field name="year"/>
                    <field name="medium_id"/>
                    <field name="standard_id"/>
                </xpath>

                <field name="website" position="after">
                    <field name="gender"/>
                    <field name="date_of_birth"/>
                    <field name="age"/>
                    <field name="admission_date"/>
                    <field name="pid" readonly="1"/>
                </field>
                
                <!-- Hidden Label Info & Field -->
                <xpath expr="//group[@name='school_info']" position="attributes">
                    <attribute name="attrs">{'invisible': 1}</attribute>
                </xpath>
                <xpath expr="//group[@name='class_info']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <field name="website" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field> 
                
                <!-- Rename Label Info -->
                <xpath expr="//separator[@name='personal_info']" position="attributes">
                    <attribute name="string">Student Information</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>