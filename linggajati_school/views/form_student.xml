    <!-- Membuat Form pada website  -->
    <template id="registration" name="Registrasi">    
        <t t-call="website.layout">
            <!-- Hide Footer -->
            <!-- <div id="wrap">
                <div class="oe_structure" id="oe_structure_website_event_index_4"></div>
                <div class="container">
                </div>
            </div> -->

            <!-- Jumbotron -->
            <div class="jumbotron bg-primary p-4 mb-3">
                <div class="container-fluid">
                    <h2 class="text-center">FORMULIR PENDAFTARAN SISWA BARU</h2>
                </div>
            </div>
            
            <!-- Form -->
            <div id="wrap">
                <div class="oe_structure" id="oe_structure_website_event_index_4">
                    <div class="container">
                        <script>
                            $(document).ready(function() {
                                <!-- $('.o_affix_enabled').hide() -->
                                <!-- $('.o_footer').hide() -->
                                <!-- $('.o_main_navbar').hide() -->
                            });
                        </script>
                        <form action="/ppdb/registration/create" method="POST" role="form">
                            <!-- <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/> -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="school" class="control-label">Jenis Formulir</label>
                                        <select name="school" class="form-control" id="school">
                                            <t t-foreach="school" t-as='school'>
                                                <option t-esc="school.code" t-att-value="school.id"/>
                                            </t>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <!-- Left Column -->
                                <div class="col-md-6">
                                    <h4>DATA CALON SISWA</h4>
                                    <div class="form-group">
                                        <label for="name" class="control-label">Nama Lengkap (Sesuai Ijazah) <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" name="name" id="name" placeholder="Nama Lengkap" required="0"/>
                                    </div>
                                    <div class="form-group">
                                        <label for="gender" class="control-label">Jenis Kelamin</label>
                                        <select name="gender" class="form-control" id="gender">
                                            <option value="male">Laki-laki</option>
                                            <option value="female">Perempuan</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label" name="date">Tanggal Lahir</label>
                                        <input type="date" class="form-control" name="date" t-att-value="date" />
                                    </div>
                                </div>

                                <!-- Right Column -->
                                <div class="col-md-6 mt-4">
                                    <div class="form-group mt-2">
                                        <label class="control-label" for="email">Email</label>
                                        <input type="email" class="form-control" name="email" id="email" required="0"/>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label" for="email">Nomor Telepon</label>
                                        <input type="number" class="form-control" name="email" id="email" required="0"/>
                                    </div>
                                    
                                    <!-- <div class="form-group">
                                        <label for="state" class="control-label">Provinsi</label>
                                        <select name="state" class="form-control" id="state">
                                            <t t-foreach="state" t-as="state">
                                                <option t-esc="state.name"/>
                                            </t>
                                        </select>
                                    </div> -->
                                </div>
                            </div>

                            <!-- Daftar -->
                            <div class="clearfix oe_login_buttons mt-4">
                                <button class="btn btn-primary btn-block" type="submit">Daftar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="replace_footer" inherit_id="website.footer_custom" name="Footer">
        <xpath expr="//div[@id='footer']" position="replace">
        </xpath>
    </template>

    
    <record id="thanks_page" model="website.page">
        <field name="name">Thanks</field>
        <field name="type">qweb</field>
        <field name="url">/thank-you-page</field>
        <field name="website_published">True</field>
        <field name="key">linggajati_school.thanks_page</field>
        <field name="arch" type="xml">
            <t name="Thanks" t-name="linggajati_school.thanks_page">
                <t t-call="website.layout">
                    <div id="wrap">
                        <div class="jumbotron text-center">
                            <h1 class="display-3">Terima Kasih!</h1>
                            <p class="lead">Silahkan tunggu <strong>pengumuman</strong> untuk informasi lebih lanjut.</p>
                            <hr/>
                            <p>
                                Ada Masalah? <a href="/">Kontak Kami</a>
                            </p>
                            <p class="lead">
                                <a class="btn btn-primary btn-sm py-2" href="/" role="button">Back to Homea</a>
                            </p>
                        </div>
                    </div>
                </t>
            </t>
        </field>
    </record>
    

</odoo>