       <field name="name">Registrasi</field>
       <field name="url">ppdb/registration</field>
       <field name="parent_id" ref="website.main_menu"/>
       <field name="sequence">55</field>
   </record>

    <!-- <data inherit_id="website.assets_frontend" name="mycss">
